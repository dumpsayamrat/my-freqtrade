{
    "$schema": "https://schema.freqtrade.io/schema.json",
    "pairlists":  [
        {
            "method": "VolumePairList",
            "number_assets": 25,
            "sort_key": "quoteVolume",
            "min_value": 1000000,
            "refresh_period": 172800
        },
        {
            "method": "AgeFilter",
            "min_days_listed": 30
        },
        {
            "method": "RangeStabilityFilter",
            "lookback_days": 14,
            "min_rate_of_change": 0.03,
            "max_rate_of_change": 1.5
        },
        {
            "method": "PriceFilter",
            "low_price_ratio": 0.01
        },
        {
            "method": "SpreadFilter",
            "max_spread_ratio": 0.003
        }
    ],
    "add_config_files": [
        "config.json",
        "config-private.json"
    ]
}